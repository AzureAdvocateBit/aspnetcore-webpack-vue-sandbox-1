{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    //"strict": true,
    "importHelpers": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}